<?xml version="1.0" encoding="UTF-8" ?>
<CycloneDDS xmlns="https://cdds.io/config" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://cdds.io/config https://raw.githubusercontent.com/eclipse-cyclonedds/cyclonedds/master/etc/cyclonedds.xsd">
    <Domain id="any">
        <General>
            <!-- Bind specifically to the wireless interface -->
            <NetworkInterface name="wlP7p1s0" autodetermine="false"/>
            <AllowMulticast>true</AllowMulticast>
            <!-- Standard size for wireless reliability -->
            <MaxMessageSize>65500B</MaxMessageSize>
        </General>
        <Discovery>
            <!-- Increase retransmission counts for potentially flaky wireless -->
            <MaxMulticastRetransmitCount>5</MaxMulticastRetransmitCount>
        </Discovery>
    </Domain>
</CycloneDDS>
